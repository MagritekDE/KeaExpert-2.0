procedure(FrequencySweepCh2, parameters=null)

   macroLocation = getmacropath()
   parentPath = getbasepath(macroLocation)

   if(iskeypressed("shift"))
      PulseProgramCompiler(guiwinnr(),null,parentPath,"FrequencySweepCh2")
   elseif(iskeypressed("control"))
      gView->showExperimentHelp("FrequencySweepCh2")
   else
      gExpt->addExperiment(parentPath,"FrequencySweepCh2",parameters)
   endif

endproc()

#########################################################
