procedure(XYZ, x0, y0, z0, x1, y1, z1, duration, dStab)

   shim16(1,x0)     # x spoiler gradient
   shim16(2,y0)     # y spoiler gradient
   shim16(0,z0)     # z spoiler gradient
   delay(duration)  # spoiler duration
   shim16(1,x1)     # x spoiler gradient off
   shim16(2,y1)     # y spoiler gradient off
   shim16(0,z1)     # z spoiler gradient off
   delay(dStab)

endproc()


procedure(XYZramp, x0, y0, z0, x1, y1, z1, duration, dStab)

   shimramp16(1,x1,x0,50,2)     # x spoiler gradient
   shimramp16(2,y1,y0,50,2)     # y spoiler gradient
   shimramp16(0,z1,z0,50,2)     # z spoiler gradient
   delay(duration)  # spoiler duration
   shimramp16(1,x0,x1,50,2)     # x spoiler gradient off
   shimramp16(2,y0,y1,50,2)     # y spoiler gradient off
   shimramp16(0,z0,z1,50,2)     # z spoiler gradient off
   delay(dStab)

endproc()

