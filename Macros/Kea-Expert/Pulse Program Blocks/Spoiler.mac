procedure(gradPulse,g1,duration,nramp,dramp,dStab)

   gradramp(0,g1,nramp,dramp) #gradient
   delay(duration)             # grad duration
   gradramp(g1,0,nramp,dramp) #gradient

   if(nrArgs == 5)
      delay(dStab)
   endif
  
endproc()
