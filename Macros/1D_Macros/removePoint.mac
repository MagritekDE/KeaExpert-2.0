# Modified a single point on the current trace
# You need to manually delete the old trace after making the change

procedure(remove_point)

  (x,y)= getplotdata("1d")
   p = getx()
   ind = findindex(x,p)
   xnew = join(x[0:ind-1],x[ind+1:-1])
   ynew = join(y[0:ind-1],y[ind+1:-1])
   plot(xnew,ynew)

endproc()
