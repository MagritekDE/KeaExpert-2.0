procedure(trigger, mode)

   if(gSeq->psInfo->skipCmds == 0)

      args = getargnames()
      cnt = gSeq->psInfo->loopCnt
      gSeq->psInfo->durationNStk[cnt] = gSeq->psInfo->durationNStk[cnt] + 1
      gSeq->psInfo->command = gSeq->psInfo->command + ["trigger,$mode$"]

   endif

endproc()

