procedure(closewindow_test1,verbose,delay)

   n = :windowdefinition()
   showwindow(n)
   for(t = 20 to 0 step -1)
      pause(0.2)
      setpar(0,3,"text","$t*0.1$ seconds")
   next(t)
   closewindow(n)

endproc(1,"")

