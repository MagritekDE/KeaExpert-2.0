procedure(setctrlvalues_test1,verbose,delay)

# Make a window and show it
   n = :windowdefinition()
   showwindow(n)

# Extract the control values
   lst = getctrlvalues(n)
   assignlist(lst)
   pause(delay)

# Modify the values
   checkbox1 = "no"
   colorbox1 = [255,0,0]
   rbutton1 = "a"
   slider1 = 10
   stext1 = "static string"
   stext2 = 99
   textbox1 = "data"
   textbox2 = 99
   textmenu1 = "option1"
   textmenu2 = 2

# Turn them into a list
   lst = mkparlist()

# Update the controls
   setctrlvalues(n,lst)

# Wait a moment and close the window
   pause(delay)

   closewindow(n)

endproc(1,"")

