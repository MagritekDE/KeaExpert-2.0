       textbox(5, 150, 15, 40)
       textbox(6, 150, 40, 40)
       textmenu(7, 150, 65, 60, 200)
       textmenu(8, 150, 90, 60, 200)
       statictext(9, 81, 55, "left","some text")
       statictext(10, 81, 70, "left","42")

     # Set other control parameters
       setpar(n,1,"color",[0,255,0])
       setpar(n,2,"text","yes")
       setpar(n,3,"text","b")
       setpar(n,4,"value",50)
       setpar(n,5,"text","string")
