procedure(axes3d_test1,verbose,delay)

   # Change axes origin
   for(m = 1 to 100)
      clear3d
      viewdistance(600)
      rotate3d(-15,340,0)
      color3d([1,0,0])
      textsize3d(20)
      axes3d([-100+m*2,-100+m*2,0],50)
      pause(delay/5)
   next m
   
   # Change axes length
   for(m = 1 to 100)
      clear3d
      viewdistance(600)
      rotate3d(-15,340,0)
      color3d([1,0,0])
      textsize3d(20)
      axes3d([0,0,0],m)
      pause(delay/5)
   next m
   
   # Change text size and colour
   for(m = 1 to 100)
      clear3d
      viewdistance(1000)
      rotate3d(-15,340,0)
      color3d([m/100,1-m/100,0])
      textsize3d(m)
      axes3d([0,0,0],100)
      pause(0.02)
   next m

endproc(1,"")

