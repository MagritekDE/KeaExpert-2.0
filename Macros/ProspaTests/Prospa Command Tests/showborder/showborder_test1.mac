procedure(showborder_test1,verbose,delay)

   curplot("1d")
   for(k = 0 to 9)
      if(k%2 == 0)
         showborder("false")
      else
         showborder("true")
      endif
      pause(0.2)
   next(k)

   curplot("2d")
   for(k = 0 to 9)
      if(k%2 == 0)
         showborder("false")
      else
         showborder("true")
      endif
      pause(0.2)
   next(k)

endproc(1,"")
