procedure(slider_test1,verbose,delay)

   n = window("slider test",100,100,200,200)
       textbox(1,20,20,30)
       slider(2,60,20,100,40,"horiz",
             pos = getpar(1,2,"value");
             setpar(1,1,"text",pos);)
       slider(3,20,55,40,100,"vert",
             pos = getpar(1,3,"value");
             setpar(1,1,"text",pos);)
       setpar(n,2,"pagestep",10)
       setpar(n,2,"tickstep",10)
       setpar(n,3,"pagestep",5)
       setpar(n,3,"tickstep",5)
   showwindow(n)
 
   for(k = 0 to 100)
      setpar(n,2,"value",k)
      setpar(n,3,"value",k)
      setpar(n,1,"text",k)
      pause(0.05)
   next(k)

   closewindow(n)

endproc(1,"")
