procedure(showcmap3d_test1,verbose,delay)
 
   clear3d()
   N = 101
   cs = matrix(3,N)
   cs[0,~] = linvec(0,1,N)'
   cs[1,~] = 0
   cs[2,~] = linvec(1,0,N)'
   cs[0,N-1] = 0
   cmap3d(cs,[0,1],[1,1,0])
   for(k = 0 to 10)
      if(k%2 == 0)
         showcmap3d("false")
      else
         showcmap3d("true")
      endif
      pause(0.2)
   next(k)


endproc(1,"")
