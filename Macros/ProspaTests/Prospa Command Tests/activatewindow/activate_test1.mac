procedure(activate_test1,verbose,delay)

   
# First window simulates the designer
   m = window("untitled 1", 100, 100, 266, 289)
   showwindow(m)
# Make window to edit
   n = :windowdefinition()
   showwindow(n)
   pause(delay)
# Edit this window by adding a textmenu
   seteditwin(n)
   pause(delay)
   textmenu(11, 164, 168, 40, 200)
   pause(delay)
# Now activate the designer and then the edited window
   guiwinnr(m)
   activatewindow("true")
   pause(delay)
# Clean up
   closewindow(n)
   closewindow(m)

endproc(1,"")

