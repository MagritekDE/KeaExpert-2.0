procedure(draw1d_test1,verbose,delay)

   x = [0:1:1000]*pi/100

   for(m = 200 to 600 step 0.5)
      draw1d("false")
      autorange("off")
      zoom1d(-1.2,1.2,-1.2,1.2)
      plot(cos(x*2),sin(m*x/200))
      title("Lissajous Figures: m = $m,3.1f$")
      xlabel("x axis")
      ylabel("y axis")
      draw1d("true")
   next(m)

   autorange("on")
 
endproc(1,"")
