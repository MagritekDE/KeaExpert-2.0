# scalars
hex(1) == "0001"
hex(10) == "000A"
hex(20) == "0014"
hex(1023) == "03FF"
hex(65535) ==  "FFFF"
hex(262143) == "3FFFF"
hex(-1) == "FFFFFFFF"
hex(-10) == "FFFFFFF6"
hex(-20) == "FFFFFFEC"
hex(-1023) == "FFFFFC01"
hex(-65535) ==  "FFFF0001"
hex(-262143) == "FFFC0001"
# Double
hex(1d) == "0001"
hex(10d) == "000A"
hex(20d) == "0014"
hex(1023d) == "03FF"
hex(65535d) ==  "FFFF"
hex(262143d) == "3FFFF"
hex(-1d) ==       "FFFFFFFFFFFFFFFF"
hex(-10d) ==      "FFFFFFFFFFFFFFF6"
hex(-20d) ==      "FFFFFFFFFFFFFFEC"
hex(-1023d) ==    "FFFFFFFFFFFFFC01"
hex(-65535d) ==   "FFFFFFFFFFFF0001"
hex(-262143d) ==  "FFFFFFFFFFFC0001"
# Math
hex(0xFFFFFFFF & 0x12345678) == "12345678"
