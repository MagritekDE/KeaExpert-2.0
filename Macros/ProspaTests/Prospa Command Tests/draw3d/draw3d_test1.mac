procedure(draw3d_test1,verbose,delay)

clear3d()

draw3d("false")
   rotate3d(36,-60,8)
   viewdistance(500)
   for(z = -60 to 60 step 20)
     for(y = -60 to 60 step 20)
        for(x = -60 to 60 step 20)
            sphere([x,y,z],8,[1,0,0],16)
        next(x)
     next(y)
   next(z)
draw3d("true")

pause(delay)
 
endproc(1,"")
