procedure(imagerange_test1,verbose,delay)

   t = [0:1:100]
   curplot("2d")
   
   y = 50*sin(t/10)'*cos((t/10))
   showcmap("true")
   autorange("off")
   
   for(n = 0 to 50)
     draw2d("false")
     image(y,hotandcold)
     imagerange(0,n)
     title("range = ($-n$,$n$)")
     draw2d("true")
   next(n)

   pause(delay)


endproc(1,"")