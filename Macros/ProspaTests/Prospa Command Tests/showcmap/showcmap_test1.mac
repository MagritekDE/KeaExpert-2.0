procedure(showcmap_test1,verbose,delay)

   clear2d
   x = [0:99]
   y = sin(x/5)
   draw2d("true")
   image(y'*y)
   cmap(spectrum)
   title("show colormap test")
   pause(delay)
   for(k = 0 to 10)
      if(k%2 == 0)
         showcmap("false")
      else
         showcmap("true")
      endif
      pause(0.2)
   next(k)

endproc(1,"")
