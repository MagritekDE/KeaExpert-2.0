
procedure(viewdistance_test1,verbose,delay)

   clear3d()

   color3d([1,1,0])
   box3d(-10,10,-10,10,-10,10)
   depthcuerange(-30,30)
   viewdistance(100)
   linewidth3d(2)
   depthcue("on")
   rotate3d(-20,30,0)
   for(d = 300 to 70 step -1)
     viewdistance(d)
   next(t)
   depthcue("off")

endproc(1,"")
