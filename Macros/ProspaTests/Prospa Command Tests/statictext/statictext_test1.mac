procedure(statictext_test1,verbose,delay)

   n = window("static-text test",200,100,200,100)
   statictext(1,10,10,"left","0")
   statictext(2,10,30,"left","0")
   showwindow(n)
   
   for(k = 0 to 100)
     setpar(n,1,"text","n = $k$")
     setpar(n,2,"text","n = $n-k$")
     pause(0.02)
   next(k)

   closewindow(n)

endproc(1,"")
